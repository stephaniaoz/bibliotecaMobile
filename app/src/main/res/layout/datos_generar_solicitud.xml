<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INGRESE LOS DATOS PARA LA GENERACIÓN DE LA SOLICITUD"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Libro"
        style="@style/encabezadoItem"/>

    <EditText
        android:id="@+id/etLibroSolicitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre solicitante"
        style="@style/encabezadoItem"/>

    <EditText
        android:id="@+id/etNombreSolicitante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Código estudiante (202089889-1111)"
        style="@style/encabezadoItem"/>

    <EditText
        android:id="@+id/etCodigoEstudianteSolicitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correo estudiante"
        style="@style/encabezadoItem"/>

    <EditText
        android:id="@+id/etCorreoEstudianteSolicitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="usuario@correounivalle.edu.co"
        android:inputType="textEmailAddress"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mensaje"
        style="@style/encabezadoItem"/>

    <EditText
        android:id="@+id/etMensajeSolicitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/btnGenerarSolicitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generar solicitud"/>

    <Button
        android:id="@+id/btnCancelarSolicitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar"/>

</LinearLayout>